FROM ocrd/all:maximum-git
#######################################################################
LABEL maintainer="Hunsaker Consulting <hunsakerconsulting@gmail.com>"
#######################################################################
ENV RUNNING_IN_DOCKER true
#######################################################################
RUN apt-get install -y --fix-missing \
    screen \
    tmux \
    tree \
    vim \
    zsh 
#######################################################################
WORKDIR /home
    RUN /bin/zsh
ENTRYPOINT [ "/bin/zsh" ]